{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/@types",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "test/**/*",
    ]
}